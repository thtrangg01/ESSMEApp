<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/d_16"
    android:layout_marginBottom="@dimen/d_16"
    android:background="@drawable/bg_rounded_8dp_no_ripple"
    android:orientation="horizontal"
    android:padding="@dimen/d_16">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:src="@drawable/ic_baseline_person_24"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/d_16"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d_8"
            android:paddingBottom="@dimen/d_8"
            android:text="Expert 's Name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d_8"
            android:paddingBottom="@dimen/d_8"
            android:text="Position"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d_8"
            android:paddingBottom="@dimen/d_8"
            android:text="Company"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>