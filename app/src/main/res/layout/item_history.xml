<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/d_16"
    android:layout_marginBottom="@dimen/d_16"
    android:background="@drawable/bg_rounded_8dp_no_ripple"
    android:orientation="vertical"
    android:padding="@dimen/d_16">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d_8"
        android:paddingBottom="@dimen/d_8"
        android:text="Expert 's Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExpert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="@dimen/d_8"
        android:paddingBottom="@dimen/d_8"
        android:text="Position"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>